<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="com.dubture.doctrine.ui.addnature"
            objectClass="org.eclipse.core.resources.IProject">
         <menu
               label="Doctrine"
               path="additions"
               id="com.dubture.doctrine.ui.menu1">
            <separator
                  name="project">
            </separator>
         </menu>
         <action
               label="Add/Remove Doctrine Nature"
               class="com.dubture.doctrine.ui.popup.actions.AddDoctrineNature"
               menubarPath="com.dubture.doctrine.ui.menu1/group1"
               enablesFor="1"
               id="com.dubture.doctrine.ui.newAction">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.ui.category.edit"
            description="Generate Getters and Setters"
            id="com.dubture.doctrine.ui.generategetters"
            name="Generate Getters and Setters">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.dubture.doctrine.ui.actions.GenerateGettersHandler"
            commandId="com.dubture.doctrine.ui.generategetters">
         <activeWhen>
            <reference
                  definitionId="org.eclipse.php.ui.phpContentType.definition">
            </reference>
         </activeWhen>
         <enabledWhen>
            <reference
                  definitionId="org.eclipse.php.ui.phpContentType.definition">
            </reference>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:sourceMenuId?before=sourceBegin">
         <command
               commandId="com.dubture.doctrine.ui.generategetters"
               label="Generate Getters and Setters"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="org.eclipse.php.ui.phpContentType.definition">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editors.templates">
      <contextType
            class="com.dubture.doctrine.ui.templates.DoctrineContextType"
            id="doctrine">
      </contextType>
      <include
            file="templates/doctrinedefault-templates.xml"
            translations="templates/doctrinedefault-templates.properties">
      </include>
   </extension>

</plugin>
